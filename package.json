{
  "name": "raygbiv",
  "version": "1.0.0",
  "description": "WebGPU rendering app",
  "main": "./dist/main.js",
  "build": {
    "appId": "ray.g.biv",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": ""
    },
    "win": {
      "target": "nsis",
      "icon": ""
    },
    "linux": {
      "target": "deb",
      "icon": "",
      "category": "Development"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.js",
    "lint": "eslint",
    "start": "npm run build && electron ./dist/main.js",
    "start:web": "webpack serve --config webpack.config.js",
    "shaders": "node build-shaders.mjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tweakpane/core": "^1.0.6",
    "@webgpu/glslang": "^0.0.15",
    "@webgpu/types": "^0.1.6",
    "electron-builder": "^22.13.1",
    "electron-nightly": "^17.0.0-nightly.20211025",
    "eslint": "^8.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "gl-matrix": "^3.3.0",
    "tweakpane": "^3.0.5"
  }
}
