{
  "name": "raygbiv",
  "version": "1.0.0",
  "description": "WebGPU rendering app",
  "main": "./dist/main.js",
  "build": {
    "appId": "ray.g.biv",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": ""
    },
    "win": {
      "target": "nsis",
      "icon": ""
    },
    "linux": {
      "target": "deb",
      "icon": "",
      "category": "Development"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.js",
    "lint": "eslint",
    "start": "npm run build && electron ./dist/main.js",
    "shaders": "node build-shaders.mjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@webgpu/glslang": "^0.0.15",
    "@webgpu/types": "0.1.4",
    "electron-builder": "^22.11.7",
    "electron-nightly": "^16.0.0-nightly.20210722",
    "eslint": "^7.30.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2 ",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "gl-matrix": "^3.3.0"
  }
}
