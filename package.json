{
  "name": "raygbiv",
  "version": "1.0.0",
  "description": "WebGPU rendering app",
  "main": "./dist/main.js",
  "build": {
    "appId": "ray.g.biv",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": ""
    },
    "win": {
      "target": "nsis",
      "icon": ""
    },
    "linux": {
      "target": "deb",
      "icon": "",
      "category": "Development"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.js",
    "lint": "eslint",
    "start": "npm run build && electron ./dist/main.js",
    "shaders": "node build-shaders.mjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@webgpu/glslang": "0.0.15",
    "@webgpu/types": "0.0.31",
    "electron-builder": "^22.8.1",
    "electron-nightly": "^11.0.0-nightly.20200826",
    "eslint": "^7.9.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "ts-loader": "^8.0.4",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "gl-matrix": "^3.3.0"
  }
}
